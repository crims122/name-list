<Window x:Class="NameList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NameList"
        mc:Ignorable="d"
        Title="Name List" Height="350" Width="300" ResizeMode="NoResize" Background="DimGray">

    <StackPanel>
        <Label FontWeight="Bold">Add Name</Label>
    <!-- add to list label -->
    <TextBox x:Name="myTextBox" Width="125" HorizontalAlignment="Left" BorderThickness="1.5" BorderBrush="Black" Background="Gray"></TextBox>
    <!-- submit name button -->
    <Button x:Name="myButton" Width="75" HorizontalAlignment="Left" FontWeight="Bold" BorderThickness="1" Click="myButton_Click">Submit</Button>
    <!-- label for list -->
    <Label Width="95" FontWeight="Bold">List Of Names</Label>
    <!-- list -->
    <ListBox x:Name="myListBox" Height="200" Width="100" BorderThickness="1.5" BorderBrush="Black" Background="Gray" Foreground="Black"></ListBox>
    <!-- delete list item button -->
    <Button x:Name="myButton2" Width="75" HorizontalAlignment="Center" FontWeight="Bold" BorderThickness="1" Click ="myButton2_Click">Remove</Button>
    </StackPanel>
</Window>
